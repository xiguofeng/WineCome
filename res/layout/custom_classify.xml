<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_classify_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/custom_classify_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        android:paddingBottom="8dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="8dip" >

        <ImageView
            android:id="@+id/custom_classify_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/custom_classify_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/custom_classify_iv"
            android:text="活动专区"
            android:textColor="@color/red_title_bg"
            android:textSize="@dimen/middle_text_size" />

        <ImageView
            android:id="@+id/custom_classify_arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />

        <TextView
            android:id="@+id/custom_classify_second_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/custom_classify_arrow_iv"
            android:textColor="@color/black_character"
            android:textSize="@dimen/micro_text_size" />

        <LinearLayout
            android:id="@+id/custom_classify_divide_ll"
            android:layout_width="0.5dip"
            android:layout_height="10dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/custom_classify_second_name_tv"
            android:background="@color/gray_divide_line"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/custom_classify_first_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/custom_classify_divide_ll"
            android:textColor="@color/black_character"
            android:textSize="@dimen/micro_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:background="@drawable/h_line"
        android:orientation="vertical" >
    </LinearLayout>

    <com.xgf.winecome.ui.view.CustomGridView
        android:id="@+id/custom_classify_goods_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dip"
        android:layout_marginRight="1dip"
        android:cacheColorHint="#00000000"
        android:horizontalSpacing="1dip"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:verticalSpacing="1dip" >
    </com.xgf.winecome.ui.view.CustomGridView>

    <!-- <com.plmt.boommall.ui.view.listview.HorizontalListView -->
