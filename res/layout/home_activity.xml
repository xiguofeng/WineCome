<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@color/gray_bg" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/home_radio_button_group"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_gravity="bottom"
            android:background="@color/black_tab_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/home_tab_home_rb"
                style="@style/home_tab_bottom"
                android:layout_gravity="center_vertical"
                android:background="@drawable/home_tab_bg_selector"
                android:checked="true"
                android:drawableTop="@drawable/home_tab_home_selector" />

            <RadioButton
                android:id="@+id/home_tab_cart_rb"
                style="@style/home_tab_bottom"
                android:layout_gravity="center_vertical"
                android:background="@drawable/home_tab_bg_selector"
                android:drawableTop="@drawable/home_tab_cart_selector" />

            <RadioButton
                android:id="@+id/home_tab_more_rb"
                style="@style/home_tab_bottom"
                android:layout_gravity="center_vertical"
                android:background="@drawable/home_tab_bg_selector"
                android:drawableTop="@drawable/home_tab_more_selector" />
        </RadioGroup>
    </LinearLayout>

</TabHost>