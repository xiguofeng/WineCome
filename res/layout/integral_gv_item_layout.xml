<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/integral_gv_item_icon_iv"
        android:layout_width="76dip"
        android:layout_height="100dip"
        android:layout_marginTop="5dip"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/img_null" />

    <TextView
        android:id="@+id/integral_gv_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/black_character"
        android:textSize="@dimen/small_text_size" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:gravity="center" >

        <TextView
            android:id="@+id/integral_gv_item_score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textColor="@color/red_title_bg"
            android:textSize="@dimen/small_text_size" />

        <Button
            android:id="@+id/integral_gv_item_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corners_bg_ora"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:text="@string/exchange"
            android:textColor="@color/white"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>

</LinearLayout>