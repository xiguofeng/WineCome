<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_title_bg" >

        <ImageView
            android:id="@+id/per_info_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="8dip"
            android:src="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/info_input"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/order_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/per_info_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/per_info_auth_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <EditText
                        android:id="@+id/per_info_phone_et"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLength="50"
                        android:paddingBottom="9dip"
                        android:paddingLeft="100dip"
                        android:paddingRight="50dip"
                        android:paddingTop="9dip"
                        android:singleLine="true"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/per_info_phone_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:maxLength="50"
                        android:paddingBottom="6dip"
                        android:paddingLeft="100dip"
                        android:paddingRight="50dip"
                        android:paddingTop="6dip"
                        android:singleLine="true"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10dip"
                        android:text="@string/mobile_phone"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <LinearLayout
                        android:id="@+id/per_info_replace_phone_ll"
                        android:layout_width="100dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/orange_bg"
                        android:gravity="center"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip" >

                        <TextView
                            android:id="@+id/per_info_replace_phon_btn_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="6.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dip"
                            android:paddingTop="6.0dip"
                            android:text="@string/replace_phone"
                            android:textColor="@color/white"
                            android:textSize="@dimen/middle_text_size" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffcfd4da" />

                <RelativeLayout
                    android:id="@+id/per_info_ver_code_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white" >

                    <EditText
                        android:id="@+id/per_info_ver_code_et"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint=""
                        android:imeActionLabel="下一步"
                        android:imeOptions="actionDone|flagNoExtractUi"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:paddingBottom="6.0dip"
                        android:paddingLeft="100dip"
                        android:paddingRight="50dip"
                        android:paddingTop="6.0dip"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/per_info_ver_code_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/per_info_ver_code_et"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10dip"
                        android:text="@string/verification_code"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <LinearLayout
                        android:id="@+id/per_info_ver_code_ll"
                        android:layout_width="100dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/orange_bg"
                        android:gravity="center"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip" >

                        <TextView
                            android:id="@+id/per_info_ver_code_btn_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="6.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dip"
                            android:paddingTop="6.0dip"
                            android:text="@string/get_verification_code"
                            android:textColor="@color/white"
                            android:textSize="@dimen/middle_text_size" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#ffcfd4da" />

            <RelativeLayout
                android:id="@+id/per_info_area_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/per_info_area_tag_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10dip"
                    android:text="@string/address"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/middle_text_size" />

                <TextView
                    android:id="@+id/per_info_area_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingBottom="6.0dip"
                    android:paddingLeft="100dip"
                    android:paddingRight="50dip"
                    android:paddingTop="6.0dip"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/middle_text_size" >
                </TextView>

                <ImageView
                    android:id="@+id/per_info_area_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:padding="5dip"
                    android:src="@drawable/enter_selector" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#ffcfd4da"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="3dip"
                android:paddingTop="3dip"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/per_info_detail_area_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:paddingBottom="6.0dip"
                    android:paddingLeft="60dip"
                    android:paddingRight="50dip"
                    android:paddingTop="6.0dip"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/middle_text_size" />

                <TextView
                    android:id="@+id/per_info_detail_area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/per_info_detail_area_et"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10dip"
                    android:text="@string/street"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/middle_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#ffcfd4da" />

            <LinearLayout
                android:id="@+id/per_info_alternative_person_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/per_info_alternative_person_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@color/white"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" >

                    <TextView
                        android:id="@+id/per_info_alternative_person_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10dip"
                        android:text="@string/alternative_person"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <CheckBox
                        android:id="@+id/per_info_alternative_person_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@null"
                        android:button="@drawable/switch_selector"
                        android:focusable="false"
                        android:gravity="center" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/per_info_alternative_person_info_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="#ffcfd4da" />

                    <RelativeLayout
                        android:id="@+id/per_info_alternative_person_name_rl"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip" >

                        <EditText
                            android:id="@+id/per_info_alternative_person_name_et"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:paddingBottom="6.0dip"
                            android:paddingLeft="100dip"
                            android:paddingRight="20dip"
                            android:paddingTop="6.0dip"
                            android:textColor="@color/black_character"
                            android:textSize="@dimen/middle_text_size" />

                        <TextView
                            android:id="@+id/per_info_alternative_person_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dip"
                            android:text="@string/name"
                            android:textColor="@color/black_character"
                            android:textSize="@dimen/middle_text_size" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="#ffcfd4da" />

                    <RelativeLayout
                        android:id="@+id/per_info_alternative_person_phone_rl"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip" >

                        <EditText
                            android:id="@+id/per_info_alternative_person_phone_et"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:paddingBottom="6.0dip"
                            android:paddingLeft="100dip"
                            android:paddingRight="20dip"
                            android:paddingTop="6.0dip"
                            android:textColor="@color/black_character"
                            android:textSize="@dimen/middle_text_size" />

                        <TextView
                            android:id="@+id/per_info_alternative_person_phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dip"
                            android:text="@string/mobile_phone"
                            android:textColor="@color/black_character"
                            android:textSize="@dimen/middle_text_size" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:paddingBottom="3dip"
                android:paddingTop="3dip" >

                <EditText
                    android:id="@+id/per_info_address_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingBottom="6.0dip"
                    android:paddingLeft="100dip"
                    android:paddingRight="0dip"
                    android:paddingTop="6.0dip"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/per_info_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10dip"
                    android:text="@string/dev_address"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/middle_text_size" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/per_info_address_lv_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_bg_gray"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10dip"
                    android:text="@string/dev_address_history"
                    android:textColor="@color/gray_text_title"
                    android:textSize="@dimen/small_text_size" />

                <com.xgf.winecome.ui.view.CustomListView
                    android:id="@+id/per_info_address_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dip"
                    android:divider="@color/gray_divide_line"
                    android:dividerHeight="1dip"
                    android:fastScrollEnabled="false"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:scrollbars="none" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/per_info_intime_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:paddingBottom="8dip"
                android:paddingRight="8dip"
                android:paddingTop="8dip" >

                <TextView
                    android:id="@+id/per_info_intime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10dip"
                    android:text="@string/in_time"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/middle_text_size" />

                <CheckBox
                    android:id="@+id/per_info_intime_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@null"
                    android:button="@drawable/check_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="3dip" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#ffcfd4da" />

            <RelativeLayout
                android:id="@+id/per_info_set_time_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="8dip"
                android:paddingRight="8dip"
                android:paddingTop="8dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:text="@string/set_time"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/middle_text_size" />

                <CheckBox
                    android:id="@+id/per_info_set_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:background="@null"
                    android:button="@drawable/check_selector"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="3dip" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/per_info_date_info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffcfd4da" />

                <RelativeLayout
                    android:id="@+id/per_info_date_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip" >

                    <TextView
                        android:id="@+id/per_info_date_tag_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10dip"
                        android:text="@string/distribution_date"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/per_info_date_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:paddingBottom="6.0dip"
                        android:paddingLeft="100dip"
                        android:paddingRight="50dip"
                        android:paddingTop="6.0dip"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" >
                    </TextView>

                    <ImageView
                        android:id="@+id/per_info_date_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:padding="5dip"
                        android:src="@drawable/enter_selector" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffcfd4da" />

                <RelativeLayout
                    android:id="@+id/per_info_time_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip" >

                    <TextView
                        android:id="@+id/per_info_time_tag_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10dip"
                        android:text="@string/distribution_time"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/per_info_time_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:paddingBottom="6.0dip"
                        android:paddingLeft="100dip"
                        android:paddingRight="50dip"
                        android:paddingTop="6.0dip"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <ImageView
                        android:id="@+id/per_info_time_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:padding="5dip"
                        android:src="@drawable/enter_selector" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="#ffcfd4da" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/per_info_invoice_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/per_info_invoice_rl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@color/white"
                    android:paddingBottom="4dip"
                    android:paddingTop="4dip" >

                    <TextView
                        android:id="@+id/per_info_invoice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10dip"
                        android:text="@string/invoice"
                        android:textColor="@color/black_character"
                        android:textSize="@dimen/middle_text_size" />

                    <CheckBox
                        android:id="@+id/per_info_invoice_cb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@null"
                        android:button="@drawable/switch_selector"
                        android:focusable="false"
                        android:gravity="center" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/per_info_invoice_info_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="#ffcfd4da" />

                    <RelativeLayout
                        android:id="@+id/relativeLayout8"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip" >

                        <EditText
                            android:id="@+id/per_info_invoice_title_et"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:paddingBottom="6.0dip"
                            android:paddingLeft="100dip"
                            android:paddingRight="20dip"
                            android:paddingTop="6.0dip"
                            android:textColor="@color/black_character"
                            android:textSize="@dimen/middle_text_size" />

                        <TextView
                            android:id="@+id/per_info_invoice_title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dip"
                            android:text="@string/invoice_title"
                            android:textColor="@color/black_character"
                            android:textSize="@dimen/middle_text_size" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="#ffcfd4da" />

                    <LinearLayout
                        android:id="@+id/per_info_invocie_history_lv_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corners_bg_gray"
                        android:orientation="vertical"
                        android:paddingBottom="10dip"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="8dip"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:text="@string/invoice_history"
                            android:textColor="@color/gray_text_title"
                            android:textSize="@dimen/small_text_size" />

                        <com.xgf.winecome.ui.view.CustomListView
                            android:id="@+id/per_info_invocie_lv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dip"
                            android:divider="@color/gray_divide_line"
                            android:dividerHeight="1dip"
                            android:fastScrollEnabled="false"
                            android:paddingLeft="10dip"
                            android:paddingRight="10dip"
                            android:scrollbars="none" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/per_info_invoice_content_rl"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="3dip"
                        android:paddingTop="3dip" >

                        <TextView
                            android:id="@+id/per_info_invoice_content_tag_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10dip"
                            android:text="@string/invoice_content"
                            android:textColor="@color/black_character"
                            android:textSize="@dimen/middle_text_size" />

                        <TextView
                            android:id="@+id/per_info_invoice_content_tv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:maxLength="16"
                            android:maxLines="1"
                            android:paddingBottom="6.0dip"
                            android:paddingLeft="100dip"
                            android:paddingRight="50dip"
                            android:paddingTop="6.0dip"
                            android:textColor="@color/black_character"
                            android:textSize="@dimen/middle_text_size" >
                        </TextView>

                        <ImageView
                            android:id="@+id/per_info_invoice_content_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:padding="5dip"
                            android:src="@drawable/enter_selector" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/per_info_bottom_division_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/per_info_bottom_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30dip"
                android:paddingTop="30dip" >

                <LinearLayout
                    android:id="@+id/per_info_submit_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/corners_bg_red"
                    android:gravity="center"
                    android:padding="10dip"
                    android:paddingBottom="3dip"
                    android:paddingTop="3dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/medium_text_size" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dip"
                    android:hint="@string/delivery_address_hint"
                    android:paddingLeft="25dip"
                    android:paddingRight="25dip"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/micro_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dip"
                    android:hint="@string/delivery_time_hint"
                    android:paddingLeft="25dip"
                    android:paddingRight="25dip"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/micro_text_size" />

                <TextView
                    android:id="@+id/per_info_agreement_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dip"
                    android:hint="@string/agreement_hint"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/small_text_size" />

                <TextView
                    android:id="@+id/per_info_agreement_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dip"
                    android:text="@string/agreement"
                    android:textColor="@color/blue_content_bg"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>