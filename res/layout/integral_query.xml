<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_common_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_title_bg" >

        <ImageView
            android:id="@+id/integral_query_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="8dip"
            android:src="@drawable/back_selector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/integral_query"
            android:textColor="@color/white"
            android:textSize="@dimen/large_text_size" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/integral_query_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/integral_query_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <EditText
                    android:id="@+id/integral_query_phone_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:maxLength="50"
                    android:paddingBottom="10dip"
                    android:paddingLeft="100dip"
                    android:paddingRight="50dip"
                    android:paddingTop="10dip"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10dip"
                    android:text="@string/mobile_phone"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/medium_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#ffcfd4da" />

            <RelativeLayout
                android:id="@+id/integral_query_ver_code_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <EditText
                    android:id="@+id/integral_query_ver_code_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:digits="@string/num_digits"
                    android:hint=""
                    android:imeOptions="actionDone|flagNoExtractUi"
                    android:maxLength="16"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:paddingLeft="100dip"
                    android:paddingRight="50dip"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/medium_text_size" />

                <TextView
                    android:id="@+id/integral_query_ver_code_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/integral_query_ver_code_et"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10dip"
                    android:text="@string/verification_code"
                    android:textColor="@color/black_character"
                    android:textSize="@dimen/medium_text_size" />

                <LinearLayout
                    android:id="@+id/integral_query_ver_code_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/orange_bg"
                    android:gravity="center" >

                    <TextView
                        android:id="@+id/integral_query_ver_code_btn_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10dip"
                        android:paddingTop="10dip"
                        android:text="@string/get_verification_code"
                        android:textColor="@color/white"
                        android:textSize="@dimen/middle_text_size" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#ffcfd4da" />

            <LinearLayout
                android:id="@+id/integral_query_bottom_division_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dip"
                android:paddingTop="5dip" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/integral_query_submit_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="15dip"
                android:background="@drawable/corners_bg_red"
                android:gravity="center"
                android:padding="10dip"
                android:paddingBottom="3dip"
                android:paddingTop="3dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/query"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>