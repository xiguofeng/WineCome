<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_list_content_bg"
    android:descendantFocusability="blocksDescendants"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:gravity="center_horizontal" >

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/goods_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:src="@drawable/img_null" />

        <LinearLayout
            android:id="@+id/right_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@+id/goods_iv"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/goods_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/gray_text_title"
                android:textSize="@dimen/medium_text_size" />

            <LinearLayout
                android:id="@+id/goods_price_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/goods_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="399"
                    android:textColor="@color/orange_text"
                    android:textSize="@dimen/medium_text_size" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_centerInParent="true"
                        android:src="@color/gray_divide_line" />

                    <TextView
                        android:id="@+id/goods_original_prices_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:maxLines="1"
                        android:text="299"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/small_text_size" />
                </RelativeLayout>
            </LinearLayout>

            
            <LinearLayout
                android:id="@+id/right_bottom_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:background="@drawable/corners_bg"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/goods_reduce_ib"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:background="@null"
                    android:focusable="false"
                    android:src="@drawable/reduce" />

                <LinearLayout
                    android:layout_width="0.5dip"
                    android:layout_height="30dip"
                    android:background="@color/gray_divide_line" >
                </LinearLayout>

                <EditText
                    android:id="@+id/goods_count_et"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:enabled="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:maxLines="1"
                    android:background="@null"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/small_text_size" />

                <LinearLayout
                    android:layout_width="0.5dip"
                    android:layout_height="30dip"
                    android:background="@color/gray_divide_line" >
                </LinearLayout>

                <ImageButton
                    android:id="@+id/goods_add_ib"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:background="@null"
                    android:focusable="false"
                    android:src="@drawable/add" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>