<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="20dp" >

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/goods_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:src="@drawable/img_null" />

        <RelativeLayout
            android:id="@+id/right_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_toRightOf="@+id/goods_iv"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/goods_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/gray_text_title"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/goods_price_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_name_tv"
                android:textColor="@color/orange_text"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/goods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_name_tv"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/goods_price_tag_tv"
                android:text="399"
                android:textColor="@color/orange_text"
                android:textSize="@dimen/medium_text_size" />

            <TextView
                android:id="@+id/goods_now_prices_tag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_name_tv"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/goods_price_tv"
                android:text="优惠价"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/goods_now_prices_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_name_tv"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/goods_now_prices_tag_tv"
                android:text="299"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/small_text_size" />

            <RelativeLayout
                android:id="@+id/right_bottom_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_price_tv"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:padding="5dip" >

                <ImageButton
                    android:id="@+id/goods_reduce_ib"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/btn_reduce_pressed" />

                <EditText
                    android:id="@+id/goods_count_et"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/goods_reduce_ib"
                    android:digits="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/goods_add_ib"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/goods_count_et"
                    android:background="@null"
                    android:src="@drawable/btn_add_pressed" />

                <ImageButton
                    android:id="@+id/goods_del_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/goods_add_ib"
                    android:background="@drawable/search_clear_normal"
                    android:clickable="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>