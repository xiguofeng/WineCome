<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <include
        android:id="@+id/home_search_rl"
        layout="@layout/common_search" />

    <!-- <com.xgf.winecome.ui.view.listview.AnimatedExpandableListView -->
    <!-- android:id="@+id/exp_lv" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:layout_weight="2" /> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/home_left_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:cacheColorHint="#00000000"
            android:dividerHeight="0.5dip"
            android:fastScrollEnabled="false"
            android:focusable="true"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/home_right_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:dividerHeight="0.5dip"
            android:fastScrollEnabled="false"
            android:focusable="true"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>