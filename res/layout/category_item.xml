<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_item_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_list_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/category_item_select_iv"
            android:layout_width="6dip"
            android:layout_height="match_parent"
            android:src="@color/red_title_bg" />

        <ImageView
            android:id="@+id/category_item_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/white_wine" />

        <TextView
            android:id="@+id/category_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_text"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

