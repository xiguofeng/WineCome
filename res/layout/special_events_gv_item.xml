<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_gravity="center"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/special_events_gv_item_icon_iv"
            android:layout_width="match_parent"
            android:layout_height="160dip"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/img_null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/special_events_gv_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/gray_text"
            android:textSize="@dimen/small_text_size" />

        <LinearLayout
            android:id="@+id/special_events_gv_goods_price_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center" >

            <TextView
                android:id="@+id/special_events_gv_goods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="399"
                android:textColor="@color/orange_text"
                android:textSize="@dimen/micro_text_size" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip" >

                <ImageView
                    android:layout_width="60dip"
                    android:layout_height="1dip"
                    android:layout_centerInParent="true"
                    android:src="@color/gray_divide_line" />

                <TextView
                    android:id="@+id/special_events_gv_goods_original_prices_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/micro_small_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/special_events_gv_item_score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:maxLines="1"
            android:textColor="@color/red_title_bg"
            android:textSize="@dimen/middle_text_size"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/special_events_gv_item_submit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/corners_bg_ora"
        android:gravity="center"
        android:paddingBottom="5dip"
        android:paddingTop="5dip"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/buy"
            android:textColor="@color/white"
            android:textSize="@dimen/middle_text_size" />
    </LinearLayout>

</LinearLayout>